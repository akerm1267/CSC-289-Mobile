<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/txtMonthDay"
            android:textSize="35dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignRight="@+id/txtMonth"
            android:layout_below="@+id/txtMonth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:id="@+id/txtDivider"
            android:textSize="75dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/txtMonth"
            android:layout_toEndOf="@+id/txtMonthDay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEC"
            android:id="@+id/txtMonth"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:id="@+id/txtWeekday"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_above="@+id/txtMonthDay"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM - 12:00 PM"
            android:id="@+id/txtShift_Time"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/txtMonthDay"
            android:layout_alignRight="@+id/txtWeekday"/>
    </RelativeLayout>
</LinearLayout>